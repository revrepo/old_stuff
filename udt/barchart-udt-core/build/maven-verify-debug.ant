<project default="maven" basedir="./..">

	<echo message="basedir : ${basedir}" />

	<target name="maven">

		<condition property="maven-command" value="mvn">
			<os family="unix" />
		</condition>
		<condition property="maven-command" value="mvn.bat">
			<os family="windows" />
		</condition>

		<exec executable="${maven-command}">

			<!-- Choose java 6/7/8 in .mavenrc -->
			<env key="JAVA_TYPE" value="JAVA_6" />

			<arg value="clean" />
			<arg value="verify" />

			<arg value="--activate-profiles" />
			<arg value="nar,int" />

			<arg value="--debug" />

			<arg value="--define" />
			<arg value="label=macosx" />

			<arg value="--define" />
			<arg value="jdk=java32" />

			<arg value="--define" />
			<arg value="invoker.debug=false" />


			<arg value="--define" />
			<arg value="skipTests" />

		</exec>

	</target>

</project>
